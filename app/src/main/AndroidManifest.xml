                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.startupsoch.jobpool.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dark" />
