        <activity
            android:name="com.startupsoch.jobpool.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="com.startupsoch.jobpool.EmployerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="com.startupsoch.jobpool.CandidatepackageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="com.startupsoch.jobpool.EmployerpackageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.startupsoch.jobpool.CompleteProfileActivity"
            android:screenOrientation="portrait"
