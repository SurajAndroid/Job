<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/fillbaoundry"
    android:orientation="vertical"
    >

    <utils.TextviewSemiBold
        android:layout_marginTop="10sp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLEASE SELECT"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/header_font"
        android:textStyle="bold" />


    <View
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="#Fae731"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="#Baa307"/>
    <LinearLayout

        android:layout_marginBottom="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_marginLeft="10sp"
            android:layout_marginRight="20sp"
            android:gravity="center"
            android:id="@+id/candidate_registration"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:text="CANDIDATE"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="10sp"
            android:layout_marginLeft="20sp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/employer_registration"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_business" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:text="EMPLOYER"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>