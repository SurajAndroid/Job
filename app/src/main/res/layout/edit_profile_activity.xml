<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/parentLayout"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topView"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/slidMenuLayout"
            android:padding="10sp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/menu"
                android:id="@+id/imageView2" />
        </LinearLayout>

        <utils.TextviewSemiBold
            android:textColor="#000000"
            android:textSize="@dimen/header_font"
            android:text="EDIT PROFILE"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/bottomLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <utils.TextviewSemiBold
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="EDIT PROFILE"
            android:textColor="#000000"
            android:textSize="@dimen/header_font"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editProfileTxtView" />

     </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topView"
        android:id="@+id/linearLayout2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="15sp"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:src="@drawable/placeholder"
            android:id="@+id/UserProfileImage"
            app:civ_border_width="2sp"
            app:civ_border_color="@color/colorAccent"/>

        <utils.TextviewSemiBold
            android:id="@+id/nameTxt"
            android:textColor="@color/white_one"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANDIDATE NAME"/>

    </LinearLayout>


    <ImageView
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:src="@drawable/curve"
        android:scaleType="fitXY"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView6" />

    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView6"
        android:layout_above="@+id/bottomLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="@dimen/medium_font"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="City: "
                            android:id="@+id/textView22" />

                        <TextView
                            android:textSize="@dimen/medium_font"
                            android:textColor="#808080"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Indore"
                            android:id="@+id/cityTxt" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/skillesLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="@dimen/medium_font"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Skills: "/>

                        <TextView
                            android:textSize="@dimen/medium_font"
                            android:textColor="#808080"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" HTML, Android, C, Java"
                            android:id="@+id/skillesTxt" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/expLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="@dimen/medium_font"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Experience: "/>

                        <TextView
                            android:id="@+id/experiencetTxt"
                            android:textSize="@dimen/medium_font"
                            android:textColor="#808080"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 2 Year 3 Month"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="@dimen/medium_font"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address: "/>

                        <TextView
                            android:id="@+id/addressTxt"
                            android:textSize="@dimen/medium_font"
                            android:textColor="#808080"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="173 Mig Colony Indore "/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/email_Layout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="@dimen/medium_font"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email: "/>

                        <TextView
                            android:id="@+id/emailTxt"
                            android:textSize="@dimen/medium_font"
                            android:textColor="#808080"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="customer@gmail.com "/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/contactLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="@dimen/medium_font"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact no:"/>

                        <TextView
                            android:id="@+id/contactTxt"
                            android:textSize="@dimen/medium_font"
                            android:textColor="#808080"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91 1234567890"/>
                    </LinearLayout>


                </LinearLayout>
                <View
                    android:id="@+id/viewfirst"
                    android:layout_marginBottom="0.5sp"
                    android:layout_below="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"
                    android:background="#C9c9c9"></View>
                <View
                    android:layout_marginBottom="0.5sp"
                    android:layout_below="@+id/viewfirst"
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"
                    android:background="@color/white_one"></View>                <LinearLayout
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="10sp"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About Us: "/>

                    <TextView
                        android:id="@+id/aboutUsTxt"
                        android:layout_marginBottom="20sp"
                        android:layout_marginTop="10sp"
                        android:textColor="#808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A results-driven,"/>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>