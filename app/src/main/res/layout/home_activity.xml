<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:id="@+id/parentLayout"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginBottom="14dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout5">

        <com.google.android.gms.common.SignInButton
            android:visibility="gone"
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35sp">

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/fillbaoundry"
                android:id="@+id/registerLayout"
                android:layout_marginRight="15sp"
                android:layout_width="120sp"
                android:gravity="center"
                android:layout_height="match_parent">

                <utils.TextviewSemiBold
                    android:textSize="@dimen/medium_font"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTER"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/loginLayout"
                android:gravity="center"
                android:background="@drawable/boundry"
                android:layout_marginLeft="15sp"
                android:orientation="horizontal"
                android:layout_width="120sp"
                android:layout_height="match_parent">

                <utils.TextviewSemiBold
                    android:textSize="@dimen/medium_font"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOGIN"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="30sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/or"
                android:id="@+id/imageView" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35sp">


            <LinearLayout
                android:id="@+id/facebookLayout"
                android:layout_marginRight="15sp"
                android:background="@drawable/fb"
                android:orientation="horizontal"
                android:layout_width="120sp"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/googleLayout"
                android:gravity="center_vertical"
                android:layout_marginLeft="15sp"
                android:background="@drawable/google"
                android:orientation="horizontal"
                android:layout_width="120sp"
                android:layout_height="match_parent">
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:padding="30sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/picture"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:visibility="gone" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/details"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Show details"
                android:visibility="gone" />

            <Button
                android:id="@+id/share"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Share"
                android:visibility="gone" />

        </LinearLayout>


<!--
        <android.support.design.widget.TextInputLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </android.support.design.widget.TextInputLayout>
-->


        <AutoCompleteTextView
            android:singleLine="true"
            android:textSize="16sp"
            android:id="@+id/lookingJob"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Looking for"
            />


        <EditText
            android:visibility="gone"
            android:paddingLeft="10sp"
            android:id="@+id/skillesediTxt"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Looking for"
            android:textSize="16sp"
            android:focusable="false"
            android:inputType="textCapWords"
            />

        <Spinner
            android:layout_marginTop="10sp"
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="40sp"></Spinner>

        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#Efedee"
            android:layout_weight="0.02" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            >

            <EditText

                android:id="@+id/locationEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:inputType="textCapWords"
                android:textSize="@dimen/medium_font"
                 />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:id="@+id/findContactLayout"
            android:layout_marginTop="20sp"
            android:layout_gravity="center"
            android:background="@drawable/fillbaoundry"
            android:layout_width="180sp"
            android:gravity="center"
            android:layout_height="40sp">

            <utils.TextviewSemiBold
                android:textSize="@dimen/header_font"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIND CANDIDATES"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>