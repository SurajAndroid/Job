<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/fillbaoundry"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <utils.TextviewSemiBold
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="@dimen/header_font"
            android:layout_marginTop="10sp"
            android:text="CHANGE PASSWORD"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" />


        <View
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="#Fae731"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="#Baa307"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColorHint="#000000"
            android:paddingRight="10dp">

            <EditText android:id="@+id/old_passwordEdit"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="@dimen/medium_font"
                android:textColorHint="#000000"
                android:hint="OLD PASSWORD" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <EditText android:id="@+id/new_passwordEdit"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="@dimen/medium_font"
                android:textColorHint="#000000"
                android:hint="NEW PASSWORD" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <EditText android:id="@+id/confirm_passwordEdit"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="@dimen/medium_font"
                android:textColorHint="#000000"
                android:hint="CONFIRM PASSWORD" />
        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_marginBottom="5sp"
            android:id="@+id/submitLayout"
            android:background="#000000"
            android:layout_marginTop="20sp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50sp">


            <utils.TextviewSemiBold
                android:textSize="@dimen/header_font"
                android:textStyle="bold"
                android:text="CHANGE NOW!"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>