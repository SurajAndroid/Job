<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewfirst"
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_below="@+id/view"
        android:layout_marginBottom="0.5sp"
        android:background="#C9c9c9"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_below="@+id/viewfirst"
        android:layout_marginBottom="0.5sp"
        android:background="@color/white_one"></View>

    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10sp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utils.TextviewSemiBold
                    android:id="@+id/candidateName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:paddingLeft="2sp"
                    android:text="Candidate Name"
                    android:textColor="#000000"
                    android:textSize="@dimen/large_font"
                    android:textStyle="bold"/>

             </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <utils.TextviewFont
                    android:id="@+id/iit_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5sp"
                    android:gravity="center_vertical"
                    android:text="Indore"
                    android:textColor="#000000"
                    android:textSize="@dimen/medium_font" />

                <utils.TextviewFont
                    android:id="@+id/branchTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5sp"
                    android:gravity="center_vertical"
                    android:text="0 to 2 year"
                    android:textColor="#000000"
                    android:textSize="@dimen/medium_font" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <utils.TextviewFont
                    android:id="@+id/jobrollTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5sp"
                    android:gravity="center_vertical"
                    android:text="Android developer"
                    android:textColor="#000000"
                    android:textSize="@dimen/medium_font" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/reactiveLayout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35sp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <utils.TextviewFont
                        android:id="@+id/textviewFont4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Re-activate"
                        android:textColor="#000000"
                        android:textSize="@dimen/small_font" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="35sp"
                    android:background="#000000"
                    android:gravity="center"
                    android:orientation="vertical">

                    <utils.TextviewFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/small_font" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>