<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewfirst"
        android:layout_marginBottom="0.5sp"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="#C9c9c9"></View>
    <View
        android:layout_marginBottom="0.5sp"
        android:layout_below="@+id/viewfirst"
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="@color/white_one"></View>

    <LinearLayout
        android:id="@+id/view"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:padding="10sp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <utils.TextviewSemiBold
                android:textStyle="bold"
                android:textSize="@dimen/medium_font"
                android:textColor="#000000"
                android:text="Candidate Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/candidateName" />

            <LinearLayout
                android:layout_marginTop="2sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <utils.TextviewFont
                    android:textSize="@dimen/medium_font"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_location"
                    android:textColor="#000000"
                    android:text="Indore"
                    android:drawablePadding="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/locationTxt"
                    android:layout_weight="1" />

                <utils.TextviewFont
                    android:textSize="@dimen/medium_font"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_library"
                    android:textColor="#000000"
                    android:text="0 to 2 year"
                    android:drawablePadding="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/expTxt"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <utils.TextviewFont
                    android:textSize="@dimen/medium_font"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_assignment"
                    android:textColor="#000000"
                    android:drawablePadding="5sp"
                    android:text="Android developer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/skillesTxt" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:padding="10sp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/showInterestLayout"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="25sp">

                <utils.TextviewFont
                    android:textSize="@dimen/small_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Show Interest"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contactLayout"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:background="#000000"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="25sp">

                <utils.TextviewFont
                    android:textSize="@dimen/small_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="Contact"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>